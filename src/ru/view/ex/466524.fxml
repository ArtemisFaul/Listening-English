<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
	minHeight="300.0" minWidth="-Infinity" prefWidth="835.0" style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="ru.controller.VarController">
	<center>
		<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
			spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<Label
					text="1. … is in the first place with the worst traffic in the USA.">
					<font>
						<Font name="Segoe UI" size="15.0" />
					</font>
				</Label>
				<fx:define>
					<ToggleGroup fx:id="tg1" />
				</fx:define>
				<RadioButton mnemonicParsing="false" text="a) San Francisco ..."
					toggleGroup="$tg1" />
				<RadioButton mnemonicParsing="false" text="b) Los Angeles …"
					toggleGroup="$tg1" />
				<RadioButton mnemonicParsing="false" text="c) Washington, D.C …"
					toggleGroup="$tg1" />
				<Label text="2. Professor Cyrus Shahabi …">
					<font>
						<Font name="Segoe UI" size="15.0" />
					</font>
				</Label>
				<fx:define>
					<ToggleGroup fx:id="tg2" />
				</fx:define>
				<RadioButton mnemonicParsing="false"
					text="a) … is never late because he uses a navigation system."
					toggleGroup="$tg2" />
				<RadioButton mnemonicParsing="false"
					text="b) … is always late even using a navigation system."
					toggleGroup="$tg2" />
				<RadioButton mnemonicParsing="false"
					text="c) … doesn’t know anything about traffic jams." toggleGroup="$tg2" />
				<Label text="3. The program will predict traffic conditions …">
					<font>
						<Font name="Segoe UI" size="15.0" />
					</font>
				</Label>
				<fx:define>
					<ToggleGroup fx:id="tg3" />
				</fx:define>
				<RadioButton mnemonicParsing="false"
					text="a) … after the driver leaves the house." toggleGroup="$tg3" />
				<RadioButton mnemonicParsing="false"
					text="b) … before the driver leaves the house." toggleGroup="$tg3" />
				<RadioButton mnemonicParsing="false"
					text="c) … in the way other navigation systems can do."
					toggleGroup="$tg3" />
				<Label text="4. ClearPath system …">
					<font>
						<Font name="Segoe UI" size="15.0" />
					</font>
				</Label>
				<fx:define>
					<ToggleGroup fx:id="tg4" />
				</fx:define>
				<RadioButton mnemonicParsing="false"
					text="a) … just responds to current traffic conditions."
					toggleGroup="$tg4" />
				<RadioButton mnemonicParsing="false"
					text="b) … will give drivers the fastest route." toggleGroup="$tg4" />
				<RadioButton mnemonicParsing="false"
					text="c) … responds to current traffic conditions and gives drivers the fastest route."
					toggleGroup="$tg4" />
				<Label text="5. ClearPath app will be launched…">
					<font>
						<Font name="Segoe UI" size="15.0" />
					</font>
				</Label>
				<fx:define>
					<ToggleGroup fx:id="tg5" />
				</fx:define>
				<RadioButton mnemonicParsing="false"
					text="a) … in the USA and overseas." toggleGroup="$tg5" />
				<RadioButton mnemonicParsing="false" text="b) … only in Los Angeles."
					toggleGroup="$tg5" />
				<RadioButton mnemonicParsing="false" text="c) … only in the USA."
					toggleGroup="$tg5" />
			</children>
		</VBox>
	</center>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</BorderPane>
